{
  "name": "texflow",
  "version": "0.7.1",
  "description": "A lightweight macOS application for editing and previewing LaTeX equations in real-time.",
  "main": "dist/main/main.js",
  "homepage": "https://github.com/panyw5/texflow#readme",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "npm run build:preload && tsc -p tsconfig.main.json && electron dist/main/main.js",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:all": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build",
    "convert-icon": "mkdir -p img/logo.iconset && sips -z 16 16 img/logo.png --out img/logo.iconset/icon_16x16.png && sips -z 32 32 img/logo.png --out img/logo.iconset/icon_16x16@2x.png && sips -z 32 32 img/logo.png --out img/logo.iconset/icon_32x32.png && sips -z 64 64 img/logo.png --out img/logo.iconset/icon_32x32@2x.png && sips -z 128 128 img/logo.png --out img/logo.iconset/icon_128x128.png && sips -z 256 256 img/logo.png --out img/logo.iconset/icon_128x128@2x.png && sips -z 256 256 img/logo.png --out img/logo.iconset/icon_256x256.png && sips -z 512 512 img/logo.png --out img/logo.iconset/icon_256x256@2x.png && sips -z 512 512 img/logo.png --out img/logo.iconset/icon_512x512.png && sips -z 1024 1024 img/logo.png --out img/logo.iconset/icon_512x512@2x.png && iconutil -c icns img/logo.iconset && rm -rf img/logo.iconset",
    "prebuild:all": "npm run convert-icon"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "katex": "^0.16.9",
    "lodash.debounce": "^4.0.8",
    "mathjs": "^12.2.1",
    "monaco-editor": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/katex": "^0.16.7",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "playwright": "^1.40.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1"
  },
  "build": {
    "appId": "com.panyw5.texflow",
    "productName": "TexFlow",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "img/logo.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "img/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "title": "TexFlow",
      "icon": "img/logo.icns"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panyw5/texflow.git"
  },
  "keywords": [
    "latex",
    "editor",
    "math",
    "equations",
    "katex",
    "electron"
  ],
  "author": "panyw5",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/panyw5/texflow/issues"
  }
}
